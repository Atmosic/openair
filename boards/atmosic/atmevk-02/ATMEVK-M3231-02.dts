/dts-v1/;
#include <arm/atmosic/ATMx2xx-x1x.dtsi>
#include <dt-bindings/gpio/gpio.h>

/ {
	model = "Atmosic EVK M3231-02";
	compatible = "atmosic,ATMEVK-M3231-02";

	chosen {
		zephyr,console = &uart1;
		zephyr,shell-uart = &uart1;
		zephyr,uart-mcumgr = &uart0;
		zephyr,bt-mon-uart = &uart1;
		zephyr,bt-c2h-uart = &uart0;
		zephyr,sram = &sram0;
		zephyr,flash-controller = &flash_controller;
		zephyr,flash = &flash0;
		zephyr,code-partition = &slot0_partition;
		zephyr,entropy = &trng;
	};

	leds {
		compatible = "gpio-leds";
		led0: led_0 {
			/* Install JP9 */
			gpios = <&gpio1 5 GPIO_ACTIVE_HIGH>;
			label = "Blue LED 0";
		};
	};

        pwmleds {
                compatible = "pwm-leds";
                pwm_led0: pwm_led_0 {
                        pwms = <&pwm4 4 PWM_MSEC(1) PWM_POLARITY_NORMAL>;
			label = "Blue LED 0";
                };
        };

	buttons {
		compatible = "gpio-keys";
		button0: button_0 {
			gpios = <&gpio0 10 GPIO_ACTIVE_HIGH>;
			label = "Push button switch 0";
		};
	};

	/* These aliases are provided for compatibility with samples */
	aliases {
		i2c-1 = &i2c1;
		kscan0 = &kscan;
		led0 = &led0;
		pwm-0 = &pwm4;
		pwm-led0 = &pwm_led0;
		sw0 = &button0;
	};
};

&i2c1 {
        sda-pin = <13>;
        scl-pin = <12>;
	clock-frequency = <I2C_BITRATE_STANDARD>;
};

&pwm4 {
	pin = <25>;
	status = "okay";
};

&spi0 {
        clk-pin = <20>;
        cs-pin = <21>;
        mosi-pin = <22>;
        miso-pin = <23>;
};

&adc {
    ch-cell = <0>;
    ch-batt = <0>;
};

&uart1 {
	tx-pin = <33>;
};

&uart0 {
	rx-pin = <10>;
	tx-pin = <11>;
	cts-pin = <12>;
	rts-pin = <13>;
};
