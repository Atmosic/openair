/dts-v1/;
#ifndef FLASH_SIZE
#define FLASH_SIZE 0x100000
#endif
#include <arm/atmosic/ATM34xx.dtsi>
#include <dt-bindings/gpio/gpio.h>
#include <atm34_pinmux.h>
#define STACKED_FLASH_WQK
#include "stacked_flash.dtsi"

/ {
	model = "Atmosic BT CS Tag 3405";
	compatible = "atmosic,ATMBTCSTAG_3405";

	chosen {
		zephyr,console = &uart1;
		zephyr,shell-uart = &uart1;
		zephyr,uart-mcumgr = &uart0;
		zephyr,bt-mon-uart = &uart1;
		zephyr,sram = &sram0;
		zephyr,flash-controller = &rram_controller;
		zephyr,flash = &rram0;
		zephyr,code-partition = &spe_partition;
		zephyr,entropy = &trng;
	};

	leds {
		compatible = "gpio-leds";
		led0: led1_g {
			gpios = <&gpio0 4 GPIO_ACTIVE_HIGH>;
			label = "Green LED1";
		};
		led1: led1_r {
			gpios = <&gpio0 6 GPIO_ACTIVE_HIGH>;
			label = "Red LED1";
		};
		led2: led2_g {
			gpios = <&gpio0 7 GPIO_ACTIVE_HIGH>;
			label = "Green LED2";
		};
		led3: led2_r {
			gpios = <&gpio1 9 GPIO_ACTIVE_HIGH>;
			label = "Red LED2";
		};
	};

	pwmleds {
		compatible = "pwm-leds";
		pwm_led0: pwm_led_0 {
			pwms = <&pwm3 3 PWM_MSEC(1) PWM_POLARITY_NORMAL>;
			label = "Red LED1";
		};
	};

	buzzers {
		pwm_buzzer0: pwm_buzzer_0 {
			compatible = "pwm-buzzer";
			pwms = <&pwm3 3 PWM_USEC(1000) PWM_POLARITY_NORMAL>;
			pulse = <PWM_USEC(500)>;
		};
	};

	buttons {
		compatible = "gpio-keys";
		button0: button_0 {
			gpios = <&gpio0 5 GPIO_ACTIVE_HIGH>;
			label = "Button1";
		};
	};

	/* These aliases are provided for compatibility with samples */
	aliases {
		i2c-1 = &i2c0;
		led0 = &led0;
		led1 = &led1;
		pwm-0 = &pwm3;
		pwm-led0 = &pwm_led0;
		sw0 = &button0;
	};
};

&pinctrl {
	i2c0_sda_default: i2c0_sda_default {
		pinmux = <13 PINMUX_I2C0_SDA>;
	};

	i2c0_scl_default: i2c0_scl_default {
		pinmux = <12 PINMUX_I2C0_SCL>;
	};
};

&i2c0 {
	pinctrl-0 = <&i2c0_sda_default &i2c0_scl_default>;
	pinctrl-names = "default";
	clock-frequency = <I2C_BITRATE_STANDARD>;
};

&pwm3 {
	pin = <29>;
	status = "okay";
};

&adc {
	ch-cell = <1>;
	ch-batt = <11>;
};

&uart0 {
	rx-pin = <30>;
	tx-pin = <15>;
	rts-pin = <13>;
	cts-pin = <12>;
};

&uart1 {
	tx-pin = <27>;
};

&pmu {
	vddio-type = <1>;
	vddpa-src = <0>;
};

&atm_antenna {
	ant-out3-pin = <3>;
	mdm-ant-rx-3to0 = <0x00000800>;
	mdm-ant-tx-3to0 = <0x00000800>;
	mdm-ant-idle = <0x0>;
	status = "okay";
};

arduino_i2c: &i2c0 {};
