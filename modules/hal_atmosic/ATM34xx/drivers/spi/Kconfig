config ATM_SPI
	bool "Atmosic SPI module"
	default y if TRUSTED_EXECUTION_NONSECURE && (SOC_FLASH_ATM || ATM_ATLC || DTOP_BYPASS || ENTROPY_ATM_TRNG || PM || ADC || ATM_PMU)
	default y if TRUSTED_EXECUTION_SECURE && !BOOTLOADER_MCUBOOT
