config ATM_SPI
	bool "Atmosic SPI module"
	default y if (TRUSTED_EXECUTION_NONSECURE || ATM_NO_SPE) && (SOC_FLASH_ATM || BT || ENTROPY_ATM_TRNG || PM || ADC || ATM_PMU)
	default y if TRUSTED_EXECUTION_SECURE && !BOOTLOADER_MCUBOOT
