#include <arm/atmosic/ATM33xx_mcuboot_partitions.dtsi>

/ {
	sram0: memory@30000000 {
		device_type = "memory";
		compatible = "mmio-sram";
		reg = <0x30010000 0x10000>;
	};
};

/* secure board file used, but TZ is not actually used */
&sec_tz {
	status = "disabled";
	/delete-property/ allow_nsc_in_ram;
};

&wdog0 {
	status = "okay";
};

#ifdef USE_ATM_SECURE_DEBUG
&uart0 {
       status = "okay";
};
#endif
